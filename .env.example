# Environment Variables for LocalFishing Frontend
# Copy this file to .env.local and update the values as needed

# Cloudinary Configuration for Receipt Uploads
VITE_CLOUDINARY_CLOUD_NAME=dji23iymw

# Backend API Configuration
# For local development with Cloudflare Workers
VITE_API_URL=http://localhost:8787
# For production (replace with your actual Workers domain)
# VITE_API_URL=https://local-fishing-backend.ntwaribrian262.workers.dev

# API Mode Configuration
# Set to 'workers' to use Cloudflare Workers, 'express' for traditional server
VITE_API_MODE=workers

# Environment Configuration
VITE_NODE_ENV=development
VITE_ENVIRONMENT=development

# Frontend Application Configuration
VITE_APP_NAME=LocalFishing Management System
VITE_APP_VERSION=1.0.0

# Debug and Logging
VITE_DEBUG=true
VITE_LOG_LEVEL=debug

# Feature Flags
VITE_ENABLE_ANALYTICS=false

# API Configuration
VITE_API_TIMEOUT=30000
VITE_API_RETRIES=3
